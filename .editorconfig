root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4
max_line_length = 79
combine_as_imports = true
multi_line_output = 4
quote_type = double

[docs/**.txt]
max_line_length = 79

[*.{diff,md}]
trim_trailing_whitespace = false
